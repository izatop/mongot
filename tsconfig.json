{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "rootDir": "src/",
    "sourceRoot": "src/",
    "sourceMap": true,
    "outDir": "build/",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}
